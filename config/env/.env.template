# SubPilot Environment Configuration Template
# Copy to .env.local in project root for local development

# ======================
# CORE CONFIGURATION
# ======================

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/subpilot_dev"

# Authentication (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# Environment
NODE_ENV="development"

# ======================
# OPTIONAL FEATURES
# ======================

# OAuth Providers (get from provider developer console)
# GOOGLE_CLIENT_ID=""
# GOOGLE_CLIENT_SECRET=""
# GITHUB_CLIENT_ID=""
# GITHUB_CLIENT_SECRET=""

# Plaid Bank Integration (get from Plaid dashboard)
# PLAID_CLIENT_ID=""
# PLAID_SECRET=""
# PLAID_ENV="sandbox"
# PLAID_PRODUCTS="transactions,accounts"
# PLAID_COUNTRY_CODES="US,CA"

# Email Configuration
# Development: Uses Mailhog by default (localhost:1025)
# Production: Configure SendGrid
# SENDGRID_API_KEY=""
# FROM_EMAIL="noreply@yourdomain.com"

# ======================
# ADVANCED OPTIONS
# ======================

# Redis (optional caching)
# REDIS_URL="redis://localhost:6379"

# Monitoring (optional)
# SENTRY_DSN=""

# Analytics (optional)
# VERCEL_ANALYTICS_ID=""

# Logging
# LOG_LEVEL="info"