# SubPilot Environment Configuration
# Copy this file to .env.local and update with your values

# ======================
# REQUIRED FOR DEVELOPMENT
# ======================

# Database (PostgreSQL)
DATABASE_URL="postgresql://user:password@localhost:5432/subpilot_dev"

# Authentication Secret (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET="change-this-to-a-random-string"
NEXTAUTH_URL="http://localhost:3000"

# ======================
# OPTIONAL FEATURES
# ======================

# OAuth Login (get from Google/GitHub developer console)
# GOOGLE_CLIENT_ID=""
# GOOGLE_CLIENT_SECRET=""
# GITHUB_CLIENT_ID=""
# GITHUB_CLIENT_SECRET=""

# Bank Integration (get from Plaid dashboard)
# PLAID_CLIENT_ID=""
# PLAID_SECRET=""
# PLAID_ENV="sandbox"

# Email (uses Mailhog locally by default)
# SMTP_HOST="localhost"
# SMTP_PORT="1025"

# ======================
# DEFAULTS (usually don't need to change)
# ======================
NODE_ENV="development"